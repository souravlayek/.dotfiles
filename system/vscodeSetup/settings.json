{
  "terminal.integrated.fontFamily": "DroidSansMono Nerd Font",
  "editor.fontSize": 16,
  // "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.rulers": [
      80
  ],
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "explorer.autoReveal": false,
  "workbench.colorCustomizations": {
      "activityBar.background": "#021e45",
      "statusBar.background": "#021e45",
      "statusBar.foreground": "#e0e0e0",
      "editorLineNumber.foreground": "#d1d1d1",
      "editorOverviewRuler.errorForeground": "#fff"
  },
  "files.associations": {
      "*.erb": "erb",
      "*.js": "javascriptreact"
  },
  "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/_site": true,
      "**/tmp": true,
      "**/*.pyc": true,
      "**/*.asset-cache": true,
      "**/*.cache": true,
      "**/*.jekyll-cache": true,
      "**/*.tweet-cache": true,
      "**/__pycache__": true,
      "**/.pytest_cache": true,
      "**/*.egg-info": true,
      "**/*.coverage": true,
      "**/celerybeat-schedule": true,
      "**/node_modules": true,
      "**/bower_components": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "[markdown]": {
      "files.trimTrailingWhitespace": false
  },
  "workbench.colorTheme": "codeSTACKr Theme",
  "workbench.iconTheme": "material-icon-theme",
  "dart.flutterSdkPath": "C:\\src\\flutter",
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "[dart]": {
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.rulers": [
          80
      ],
      "editor.selectionHighlight": false,
      "editor.suggest.snippetsPreventQuickSuggestions": false,
      "editor.suggestSelection": "first",
      "editor.tabCompletion": "onlySnippets",
      "editor.wordBasedSuggestions": false
  },
  "window.zoomLevel": 0,
  // "editor.fontFamily": "'Fira Code'",
  "editor.fontFamily": "'Victor Mono'",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "expand",
  "git.autofetch": true,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveSassCompile.settings.excludeList": [
      "**/node_modules/**",
      ".vscode/**",
      "**/utility/**"
  ],
      "editor.defaultFormatter": "esbenp.prettier-vscode",
  "liveSassCompile.settings.formats": [
      {
          "format": "expanded",
          "extensionName": ".css",
          "savePath": "~/../"
      }
  ],
  "[typescriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[javascriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "liveServer.settings.donotVerifyTags": true,
  "kite.showWelcomeNotificationOnStartup": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "tabnine.experimentalAutoImports": true,
  "workbench.sideBar.location": "right",
  "vsicons.dontShowNewVersionMessage": true,
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
  },
  "[scss]": {
      "editor.formatOnSave": true,
      "editor.suggest.insertMode": "replace",
      "gitlens.codeLens.scopes": [
          "document"
      ]
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false
}
